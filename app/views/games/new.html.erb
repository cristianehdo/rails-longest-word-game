<h1>New game</h1>
<ul class="list-inline list-unstyled">
  <% @letters.each do |letter|   %>
    <li class="btn btn-primary"><%= letter %></li>
  <% end %>
  <% @start_time %>
</ul>
<h3>What is the longest word you can find?</h3>
<form action="/score" method="post" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" class="form-control">
  <input type="submit" value="Play" class="form-control btn btn-success">
  <input type="hidden" name="grid" value="<%= @letters.join %>">
  <input type="hidden" name="start_time" value="<%=@start_time%>">
</form>

